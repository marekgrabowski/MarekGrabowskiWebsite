---
import BlogCard from "../../components/BlogCard.astro";
import MainLayout from "../../layouts/MainLayout.astro"; 
import { getCollection } from "astro:content";



const projects = (await getCollection("projects"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 20);
---

<MainLayout title={"Projects"}>
  <div class="mx-auto max-w-7xl px-1 my-8 mt-12">
    <div class="">
      <h1
        class="text-4xl py-4 font-extrabold text-center bg-gradient-to-r from-blue-600 to-purple-800 text-transparent bg-clip-text"
      >
        My Projects
      </h1>
      <p class="mt-4 text-lg text-center">
        Here are some of my recent projects over the past few years
      </p>
    </div>
    <div class="flex flex-row flex-wrap mb-4 justify-center">
      {
        projects.map((projects) => (
          <>
          <BlogCard
              title={projects.data.title}
              description={projects.data.description}
              date={projects.data.publishDate}
              slug={projects.slug}
              img={projects.data.img}
              img_alt={projects.data.img_alt}
              tags={projects.data.tags}
            />
          </>
        ))
      }
    </div>
  </div>
</MainLayout>
