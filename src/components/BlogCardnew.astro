---
import { Image } from 'astro:assets';

interface BlogCardProps {
  title: string;
  description: string;
  publishDate: string;
  tags: string;
  img: string;
  img_alt: string;
  slug: string;
}

const { title, description, publishDate, slug, tags, img, img_alt } =
  Astro.props as BlogCardProps;


---
<div class="xl:w-1/4 lg:w-1/3 sm:w-1/2 xs:w-full p-4">
    <a
      href={`/projects/${slug}`}
      class="group flex flex-col"
    >
    <div class="bg-white group-hover:translate-x-3 group-hover:-translate-y-2 group-hover:scale-[102%] transition ease-in-out border-2 border-black rounded-md group-hover:shadow-[-8px_8px_0_0_#000]">
      <div class="relative overflow-hidden">
        <Image width="550" height="200" src={img} alt={img_alt} />
      </div>
      <div class="p-4">
          {tags.map((tag) => (
            <span class="inline-block px-2 mr-1 py-1 leading-none bg-blue-200 text-blue-800 rounded-full font-semibold uppercase tracking-wide text-xs"> {tag}</span>
          ))} 
        <h2 class="mt-2 mb-2  font-bold">{title}</h2>
        <p class="text-sm">{description}</p>
      </div>
    </div>
    </a>
  </div>