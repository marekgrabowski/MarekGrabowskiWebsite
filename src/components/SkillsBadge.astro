---
interface BadgeProps {
  name: string;
  imgSrc: string;
  altSrc: string;
}

const { name, imgSrc, altSrc } = Astro.props as BadgeProps;
---

<div class="flex items-center gap-4 hover:scale-105 ease-in-out duration-200 bg-blue-600 rounded-3xl ">
  <div
    class="rounded-full w-[60px] h-[60px] flex justify-center items-center p-2"
  >
    <img src={imgSrc} alt={altSrc} height="30" width="30" />
  </div>
  <h3 class="text-white font-medium text-[14px] md:text-[16px]">{name}</h3>
</div>