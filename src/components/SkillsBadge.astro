---
interface BadgeProps {
  name: string;
  imgSrc: string;
  altSrc: string;
}

const { name, imgSrc, altSrc } = Astro.props as BadgeProps;
---

<div class="flex items-center gap-4 hover:scale-105 ease-in-out duration-200">
  <div
    class="w-[60px] h-[60px] flex justify-center items-center bg-blue-600 rounded-full drop-shadow-lg"
  >
    <img src={imgSrc} alt={altSrc} height="30" width="30" />
  </div>
  <h3 class="text-gray-700 font-medium text-sm">{name}</h3>
</div>