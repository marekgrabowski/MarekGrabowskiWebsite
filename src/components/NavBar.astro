---
import { navItems } from "../utils/navigation";

type NavbarProps = {
  display?: boolean;
};

const { display = true } = Astro.props as NavbarProps;
---

<nav role="navigation" aria-label="navigation" id="top-nav" class="flex flex-col md:flex-row md:justify-between gap-4 items-center pt-8 pb-8 sm:pb-16 w-full mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <ul class="flex justify-center items-center gap-8 px-3 py-1">
        {
          navItems.map((navItem) => (
            <a
              href={navItem.route}
              class="relative font-medium text-black before:absolute before:-bottom-1 before:h-0.5 before:w-full before:scale-x-0 before:bg-blue-800 before:transition hover:before:scale-x-100"
            >
              <li>{navItem.text}</li>
            </a>
          ))
        }
      </ul>
</nav>